{
  "name": "coinbase-trading-bot",
  "version": "1.0.0",
  "description": "A TypeScript trading bot for Coinbase Advanced Trade with trailing stop-loss and backtesting capabilities",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "postbuild": "node scripts/copy-public.js",
    "dev": "ts-node-dev --respawn --transpile-only --inspect=9229 src/index.ts",
    "backtest": "ts-node src/backtest/runner.ts",
    "fetch:candles": "ts-node src/backtest/fetchCandles.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "coinbase",
    "trading",
    "bot",
    "typescript",
    "crypto",
    "bitcoin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coinbase-sample/advanced-trade-sdk-ts": "^0.2.0",
    "@coinbase-sample/core-ts": "^0.1.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.3.1",
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
